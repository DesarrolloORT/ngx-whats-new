/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "paths": {
      "src/*": ["projects/*"]
    },
    "module": "ES2022",
    "isolatedModules": false,
    "types": ["jest", "node"],
    "esModuleInterop": true,
    "emitDecoratorMetadata": true
  },
  "include": ["projects/**/*.spec.ts", "projects/**/*.d.ts"]
}
